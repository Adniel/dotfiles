[user]
	name = Armin Ronacher
	email = armin.ronacher@active-4.com
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	editor = /usr/local/bin/vim
[color]
	ui = auto
[color "branch"]
	current = red
	local = yellow
	remote = green
[color "diff"]
	meta = cyan
	frag = magenta
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	st = status -sb
	ci = commit
	co = checkout
	br = branch
	cp = cherry-pick
	cps = cherry-pick -s
	meh = commit --amend
	wdiff = diff --word-diff=color
	wshow = show --word-diff=color
	lasttag = describe --tags --abbrev=0
	branches = branch -vv
	slog = log --abbrev-commit --pretty=format:"%C(auto,yellow)%h%C(auto)%d\\ %C(auto,reset)%s\\ \\ [%C(auto,blue)%cn%C(auto,reset),\\ %C(auto,cyan)%ar%C(auto,reset)]"
	glog = log --graph --abbrev-commit --pretty=format:"%C(auto,yellow)%h%C(auto)%d\\ %C(auto,reset)%s\\ \\ [%C(auto,blue)%cn%C(auto,reset),\\ %C(auto,cyan)%ar%C(auto,reset)]"
	gflog = log -p --cc --graph --decorate
	unci = reset HEAD^
	uncommit = reset HEAD^
	ls = ls-files
	out = log HEAD..origin
	killbranches = !git branch | grep -v master | xargs git branch -d 2> /dev/null
	sync = !git pull && git push
	comerge = "!x() { target=`git symbolic-ref HEAD`; git co $1; git merge $target; }; x"
	pill = pull
	ours = "!f() { git checkout --ours -- $@ && git add -- $@; }; f"
	theirs = "!f() { git checkout --theirs -- $@ && git add -- $@; }; f"
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
	serve = daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/
	serveall = daemon --verbose --export-all --base-path=. --reuseaddr .
[instaweb]
	httpd=webrick
[push]
	default=current
[branch]
	autosetupmerge = true
[diff]
	algorithm = patience
